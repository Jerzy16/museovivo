<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background">

    <!-- Top App Bar -->

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_margin="16dp"
            android:background="@drawable/toolbar_background"
            app:cornerRadius="16dp"
            app:elevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">
                <!-- Botón de regreso -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_back"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circular_button_background"
                    android:contentDescription="Regresar"
                    app:icon="@drawable/ic_back_arrow"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconTint="@color/primary_color"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <!-- Botón de ubicación -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_location"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/circular_button_background"
                    android:contentDescription="Mi ubicación"
                    app:icon="@drawable/ic_my_location"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:iconTint="@color/primary_color" />

            </LinearLayout>

        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Floating Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <!-- Botón de zoom in -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="Acercar"
            android:src="@drawable/ic_zoom_in"
            app:backgroundTint="@color/primary_color"
            app:fabSize="mini"
            app:tint="@android:color/white" />

        <!-- Botón de zoom out -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="Alejar"
            android:src="@drawable/ic_zoom_out"
            app:backgroundTint="@color/primary_color"
            app:fabSize="mini"
            app:tint="@android:color/white" />

        <!-- Botón de capas -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_layers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="Capas del mapa"
            android:src="@drawable/ic_layers"
            app:backgroundTint="@color/primary_color"
            app:fabSize="mini"
            app:tint="@android:color/white" />



    </LinearLayout>

    <!-- Panel de información del punto cultural -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_point_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/backgroundd">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header con imagen y título -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_point_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rounded_image_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plazadearmas1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_point_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plaza de Armas de Abancay"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_point_category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Plaza Histórica"
                        android:textColor="@color/accent_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_point_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="A 500m de tu ubicación"
                        android:textColor="@color/secondary_text"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Descripción -->
            <TextView
                android:id="@+id/tv_point_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="La plaza principal de Abancay, corazón de la ciudad y centro histórico."
                android:textColor="@color/secondary_text"
                android:textSize="14sp" />

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_details"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Ver Detalles"
                    android:textSize="12sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_info"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_navigate"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Navegar"
                    android:textSize="12sp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_navigation_placeholder"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Sheet para filtros -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header con título y botón de cerrar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Filtrar por categoría"
                        android:textColor="@color/primary_text"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_close_filter"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circular_button_background"
                        android:contentDescription="Cerrar filtro"
                        app:icon="@drawable/ic_close"
                        app:iconGravity="textStart"
                        app:iconSize="24dp"
                        app:iconTint="@color/primary_color" />

                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Todos"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_plaza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plazas" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_church"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Iglesias" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_museum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Museos" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_park"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parques" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
