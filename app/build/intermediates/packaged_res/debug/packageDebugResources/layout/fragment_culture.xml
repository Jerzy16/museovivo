<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/tab_layout_culture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btn_traditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tradiciones"
                android:layout_marginEnd="8dp"
                style="@style/Button.Secondary" />

            <Button
                android:id="@+id/btn_legends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leyendas"
                android:layout_marginEnd="8dp"
                style="@style/Button.Secondary" />

            <Button
                android:id="@+id/btn_recipes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recetas"
                android:layout_marginEnd="8dp"
                style="@style/Button.Secondary" />

            <Button
                android:id="@+id/btn_dances"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danzas"
                style="@style/Button.Secondary" />

        </LinearLayout>

    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_cultural_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp" />

</LinearLayout>
