<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:elevation="16dp"
    android:clipToOutline="true"
    android:outlineProvider="background">>

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipos Del Mapa"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close_layers"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circular_button_background"
            android:contentDescription="Cerrar"
            android:layout_alignParentEnd="true"
            app:icon="@drawable/ic_close"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconTint="@color/primary_color" />

    </RelativeLayout>
<GridLayout
    android:id="@+id/grid_map_types"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="1"
    android:layout_marginBottom="16dp">
    <!-- Las opciones de tipo de mapa se agregarán dinámicamente desde el fragmento -->

    <!-- Opciones de capas -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_layers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:checked="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_satellite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satélite" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_terrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terreno" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_hybrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Híbrido" />
    </com.google.android.material.chip.ChipGroup>
</GridLayout>


</LinearLayout>
