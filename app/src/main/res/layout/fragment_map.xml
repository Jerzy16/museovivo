<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Maps Fragment -->
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Floating Action Buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="80dp"
        android:src="@drawable/ic_my_location"
        android:contentDescription="Mi ubicación"
        app:backgroundTint="@color/primary"
        app:tint="@color/on_primary" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:layout_marginBottom="144dp"
        android:src="@drawable/ic_route"
        android:contentDescription="Rutas culturales"
        app:backgroundTint="@color/secondary"
        app:tint="@color/on_secondary"
        app:fabSize="mini" />

    <!-- Bottom Sheet para información del punto -->
    <include layout="@layout/bottom_sheet_point_info" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>