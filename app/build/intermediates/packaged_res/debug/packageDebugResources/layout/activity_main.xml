<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <!-- Fragmento principal -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation" />

    <!-- NavegaciÃ³n inferior -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/surface"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:contentDescription="Inicio" />

        <ImageButton
            android:id="@+id/btn_map"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_map"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:contentDescription="Mapa" />

        <ImageButton
            android:id="@+id/btn_ar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_ar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:contentDescription="Realidad Aumentada" />

        <ImageButton
            android:id="@+id/btn_culture"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_culture"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:contentDescription="Cultura" />

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_profile"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:contentDescription="Perfil" />

    </LinearLayout>

</RelativeLayout>