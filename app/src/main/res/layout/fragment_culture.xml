<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.content.CultureDetailActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_culture"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:title="Centro del patrimonio"
        app:titleCentered="true"
        app:titleTextColor="@color/primary_text"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="52dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:foreground="?attr/selectableItemBackground"
                android:backgroundTint="@color/primary_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_filter"
                        android:tint="@color/gray" />

                    <EditText
                        android:id="@+id/et_search_culture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:background="@android:color/transparent"
                        android:hint="BÃºsqueda de tradiciones, leyendas..."
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/gray"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <!-- Buttons removed: tabs are used for category selection per design -->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_culture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/primary"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/primary_text"
            app:tabTextColor="@color/gray"
            app:tabPaddingStart="12dp"
            app:tabPaddingEnd="12dp"
            android:paddingTop="8dp"
            app:tabMode="fixed"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_all"
                android:text="Todos"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_traditions"
                android:text="Tradiciones"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_legends"
                android:text="Leyendas"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"/>

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tab_dances"
                android:text="Danzas"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"/>

        </com.google.android.material.tabs.TabLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_cultural_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
